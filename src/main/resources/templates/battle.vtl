<!DOCTYPE html>
<html>
  <head>

    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css'>
    <script src="https://code.jquery.com/jquery-2.1.4.min.js"></script>
    <script src="JavaScript/jquery.js"></script>
    <link rel="stylesheet" href="/stylesheet.css" >
    <style>
        body {
            background-image: url("MossyStoneBrick.jpg");
            color: white;
        }
        .jumbotron {
            background-image: url("wood2.jpg");
        }
        h1 {
            color: white;
        }
        h2 {
            color: white;
        }

        @font-face {
           font-family: myFirstFont;
           src: url(slkscr.ttf);
        }
        * {
           font-family: myFirstFont;
        }
    </style>

  </head>
  <body class="battleBackground">
    <shopText>
      <div class="container">
        <div class="clearfix">
            <h2><u>Enemy</u><h2>
            #if($player.get().poisonPotions > 0)
                                                  <form action="/usepoisonpotion" method="POST">
                                                       <button class="btn btn-danger btn-lg" type="submit" id="poison_potion" value="Use a Poison potion">Use a Poison Potion</button>
                                                  </form>
                                              #end
                  <img class="pull-right" alt="ork_image" width="400" height="300" src="$enemy.get().gif"/>
                  <ul>
                  <p class="enemyname" id="enemy_name">Enemy: $enemy.get().username</p>
                  <p class="enemyhealth">HP: <b id="enemy_hp">$enemy.get().health</b> </p>
                  <p class="enemydamagelimit">Damage: <b id="enemy_damage_limit">$enemy.get().damage_limit</b> </p>
                  <p class="enemydefence">Defence: <b id="enemy_defence">$enemy.get().defence</b></p>
                  </ul>
        </div>
      </div>

      <div class="container">
             <div class="clearfix">
              <h2><u>Player</u>
              <form align="left" action="/shop" method="GET">
                <input class="btn btn-secondary" type="submit" id="shop" value="Shop">
             </form>
              <h2>
              <p id="coins"> Coins: $player.get().coins </p>
                <p2>
                    <img class="playergif" alt="player_image" width="400" height="300" src="$player.get().gif"/>
                      <ul>
                          <p id="player_name">$player.get().username</p>
                          <p>HP: <b id="player_hp">$player.get().health</b> </p>
                          <p>Damage: <b id="player_damage_limit">$player.get().damage_limit</b> </p>
                          <p>Defence: <b id="player_defence">$player.get().defence</b></p>
                          <p>Health Potions: <b id="player_hpotions">$player.get().healthPotions</b></p>
                          <p>Poison Potions: <b id="player_ppotions">$player.get().poisonPotions</b></p>
                          #if($enemy.get().is_alive.equals("true") && $player.get().is_alive.equals("true"))
                              <form action="/attack" method="POST">
                                       <button class="btn btn-danger btn-lg" type="submit" id="playerAttack" value="Attack"> Attack </button>
                              </form>
                                  #if($player.get().healthPotions > 0)
                                      <form action="/usehealthpotion" method="POST">
                                           <button class="btn btn-danger btn-lg" type="submit" id="healing_potion" value="Use a Healing potion">Use a Healing potion</button>
                                      </form>
                                  #end

                          #end
                          #if($enemy.get().is_alive.equals("false") && $player.get().battles_won < 11)
                              <p>You have defeated the enemy!</p>
                              <form action="/newbattle" method="GET">
                                  <input class="btn btn-danger btn-lg" type="submit" id="nextEnemy" value="Next Enemy">
                              </form>
                          #end
                           #if($enemy.get().is_alive.equals("false") && $player.get().battles_won == 11)
                               <p>You have defeated the $enemy.get().username!</p>
                               <form action="/newbattle" method="GET">
                                   <input class="btn btn-danger btn-lg" type="submit" id="nextEnemy" value="Return a victor!">
                               </form>
                           #end
                          #if($player.get().is_alive.equals("false"))
                              <p>You lost!</p>
                              <form action="/home" method="GET">
                                  <input class="btn btn-danger btn-lg" type="submit" id="playerAttack" value="Home">
                              </form>
                          #end
                      </ul>
                </p2>
             </div>
      </div>
      </shopText>
  </body>
</html>